extends layout

block content
  h1= title

  p(style='color: green;') 
    b #{undefined===notice ? '' : notice}

  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='Username' name='username' required='true' value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password' required='true')
    button.btn.btn-primary(type='submit') Log In

  if errors
    ul(style='margin-top: 16px;')
      for error in errors
        li(style='color: red;')
            b !{error.msg}
